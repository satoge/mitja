#include <stdio.h>

int main() {
	float suma=0;
	float mitja;
	float nou_valor;
	int numero_repeticions=0;
	char consulta='s';

	while (consulta=='s'){
		printf("Demana data seguent: ");
		scanf("%f", &nou_valor);
		suma=suma+nou_valor;
		numero_repeticions=numero repeticions+1;
		printf("vols continuar (s/n): ");
		scanf(" %c",&consulta);
	}
mitja=suma/numero_repeticions;
printf("La mitja resultat es: %2f\n",mitja);

return 0;
}
